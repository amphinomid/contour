{
    "name": "Contour",
    "version": "1.0",
    "description": "TODO",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "activeTab",
        "http://*/*",
        "https://*/*"
    ],
    "manifest_version": 2
}